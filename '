	<script src="/ygc_tp/Public/Home/js/bootstrap.min.js"></script>
	<script type="text/javascript">
	document.addEventListener('DOMContentLoaded', function() {
		FastClick.attach(document.body);
	}, false);

	var limt=0;
	var limtsum=4;
	var html;
	var botn=0;
	var total_false=false
	var yuc=1;
	index_toupiao();
	$('#name').keyup(function(){
		var name=$(this).val();

		name=clearBr(name);
		name=LTrim(name);
		name=RTrim(name);
		name=trim(name);
		if(name!=''){
			if(CheckChinese(name)){
				html='';
				console.log(name);
				$('#item10 li').remove();
				index_toupiao(name);
			}
		}else{
			if(!html){
				html='';
				console.log(name);
				index_toupiao();
			}

		}
	})
	$(window).scroll(function(){
		//滚动条所在位置的高度
		var name=$('#name').val();
		if(name){
			return false;
		}
		if(botn){
			return false;
		}
		if(total_false){
			return false;
		}
		windowTop= document.body.scrollTop;
		//当前文档高度   小于或等于   滚动条所在位置高度  则是页面底部
		if(windowTop>= yuc*240) {
			//页面到达底部
			var count=Number('{$count}');
			if(limt+4>count){
				return false;
			}
			limt=limt+4;
			html='';
			yuc=yuc+2;
			index_toupiao();
		}
	});

	function index_toupiao(name){
		if(name){
			limt=0;
			data={name:name};
		}else{
			data={limt:limt,limtsum:limtsum};
		}
		$.post("{:U('Api/Access/index_toupiao')}",data,function(data){
			if(data.status==100){
				var result=data.result;

				for(var i=0;i<result.length;i++){
					if(!result[i].piao){
						result[i].piao=0;
					}
					var item='<li class="conter" data="94"><div id="" style="display: block;"><div class="index_top" style="width: 30%;float: left;font-size: 2.0em;text-align: center" id=""><i>'+(i+1+limt)+'</i><br /></div>	<div class="index_name" style="width: 70%;float: left;" id=""><i>姓名：</i>'+result[i].name+'<br /></div>	</div>	<div class="conter-img headimg" > <a href="{:U('details')}?id='+result[i].openid+'">	<img src="'+result[i].url+'" /></a></div>	<p class="conter_mune">	<div id="" style="display: block;">	<div class="num" style="width: 70%;float: left;padding-top: 10px;" id=""><i style="font-style:normal;">当前得票：</i><span id="piaos'+result[i].id+'">'+result[i].piao+'</spna>	 	</div>	<div style="width: 30%;float: left;padding-top: 10px;" id=""><span class="do_vote" style="text-align: center;border-radius: 4px;display: block;font-size: 14px;color: #fff;background: #ff8e4b;border-color: #ff8e4b;" data-id="'+result[i].id+'">投票</span><br />	</div></div><div></div></li>';
					if(html){
						html=html+item;
					}else{
						html=item;
					}
				}

				$('#item10').append(html);
				total_false=false
			}
		})
	}
	$('.span_nav').click(function(){
		var val=$(this).attr('val');
		botn=1;
		html='';
		console.log(name);
		$('#item10 li').remove();
		index_toupiao(val);
	})
	//去除换行
	function clearBr(key)
	{
		key = key.replace(/<\/?.+?>/g,"");
		key = key.replace(/[\r\n]/g, "");
		return key;
	}

	//去除左侧空格
	function LTrim(str)
	{
		return str.replace(/^\s*/g,"");
	}
	//去右空格
	function RTrim(str)
	{
		return str.replace(/\s*$/g,"");
	}
	//去掉字符串两端的空格
	function trim(str)
	{
		return str.replace(/(^\s*)|(\s*$)/g, "");
	}
	function CheckChinese(val){
		var reg = new RegExp("[\\u4E00-\\u9FFF]+","g");
		if(reg.test(val)){
			return true;
		}else{
			return false;
		}
	}
	$('#item10').on('click','span',function(){
		var id=$(this).attr('data-id');
		data={id:id};
		$.post("{:U('Api/Access/toupiao')}",data,function(data){
			if(data.status==0){
				alert('活动提示:每人每天只能投票一次。');
			}else if(data.status==100){
				alert('投票成功');
				$('#piaos'+id).text(parseInt($('#piaos'+id).text())+1);
				//window.location.href='';
			}
		})
	})

	/*colse search bar*/
	var searchClose = true;
	$(".searchBtn").on("click",function (){
		if(searchClose){
			$(this).attr({
				"class":"btn btn-top btn-success searchBtn"
			});
			$("#search").slideDown();
			$(this).text("关闭搜索");
			searchClose = false;
		}else{
			$(this).attr({
				"class":"btn btn-top btn-default searchBtn"
			});
			$("#search").slideUp();
			searchClose = true;
			$(this).text("搜索选手");
		}
	});

	$(".joinBtn").on("click",function (){
		location.href = "http://wx.uvcsi.com/html5/ygc/tpbm/index.php";
	});

	</script>
